{
  "version": 2,
  "builds": [
    {
      "src": "**/*.{html,css,js,json,svg,ico,png}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/[^.]+$",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}